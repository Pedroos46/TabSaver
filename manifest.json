{
    "manifest_version": 2,
    "name": "Simple Tab Manager",
    "short_name": "Tab Saver",
    "version": "1.4.1",
    "description": "Simple and flexible tool to save tabs and manage them.",
    "author": "Roger Pedr√≥s Villorbina.",
    "default_locale": "es",
    "icons": { "48": "Resources/Icons/iconBlueL.png",
                "128": "Resources/Icons/iconBlueL.png"
    },
    "browser_action": {
        "default_icon": "Resources/Icons/iconBlue.png",
        "default_title": "Simple Tab Manager"
    },
    "options_page": "App/Settings/settings.html",
    "background": {
        "scripts": ["Background/managerProvider.js", "Background/manager.js", "Background/managerListeners.js"]
    },
    "incognito": "spanning",
    "permissions": [
        "tabs",
        "storage",
        "notifications",
        "activeTab",
        "bookmarks",
        "contextMenus",
        "<all_urls>",
        "identity"
    ],
    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://apis.google.com/ https://www.google-analytics.com/ https://*.firebaseio.com; object-src 'self'",
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Q"
            }
        }
    }
}